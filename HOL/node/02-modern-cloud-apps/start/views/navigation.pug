nav.navbar.navbar-default
    .navbar-header
        button(type='button', data-toggle='collapse', data-target='.navbar-collapse').navbar-toggle.collapsed
          span.sr-only
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/') Outages
      
    .collapse.navbar-collapse.navbar-collapse
        ul.nav.navbar-nav
          li(class={active: title === 'Outage Dashboard'})
            a(href='/dashboard') Dashboard
          li(class={active: title === 'Report an Outage'})
            a(href='/new') Report Outage
      
        //- Begin Login Dropdown Block
        if user 
          ul.nav.navbar-nav.navbar-right
            li.dropdown
              a(href='#', data-toggle='dropdown', role='button').dropdown-toggle Hi, #{user.displayName}
              ul.dropdown-menu
                li
                  a(href='/profile') Profile
                li.divider(role='separator"')
                li
                  a(href='/logout') Logout
        else
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/login') Login        
